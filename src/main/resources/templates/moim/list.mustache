{{> /common/header }}
{{> common/navi-bar}}
<div class="py-2 border-bottom">
	<h5 class="fs-5">#다양한 모임을 한눈에 확인하세요.</h5>
</div>
	<a href="/moim/write"><button type="submit" class="btn btn-outline-primary">모임등록</button></a> 
<div class="flex-wrap row p-1">
	{{#list }}
		<div class="col-md-3 px-1 py-2" style="font-size: 0.7em">
			<div class="card" >
				<div class="card-header">
					<span class="card-subtitle text-body-secondary ">{{cate}}</span><small>({{currentPerson}} / {{#maxPerson}} {{.}}{{/maxPerson}} {{^maxPerson}} 무제한 {{/maxPerson}})</small>
				</div>
				<div class="card-body">
					<h5 class="card-title mb-0">{{title}}</h5>
					<p class="card-text" style="height: 40px; font-size: 0.9rem">
					{{description }}
					</p>
					<div class="text-end">
						<a href="/moim/view?id={{id}}" 
							class="stretched-link link-secondary" style="font-size:0.5rem">자세히</a>
					</div>
				</div>
				<div class="card-footer text-end">
					<span>모임날짜:{{targetDate}}</span>
				</div>
			</div>
		</div>

	{{/list }}
</div>

<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <li class="page-item disabled">
      <a class="page-link">Previous</a>
    </li>
    {{#pages}}
   		 <li class="page-item"><a class="page-link" href="/moim/list?page={{.}}">{{.}}</a></li>
	{{/pages}}	 
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>
{{ > /common/footer }}
