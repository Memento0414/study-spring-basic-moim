{{> /common/header}}
	<div style="display: flex; height: 350px; flex-direction: column-reverse; align-items: center;">
		<form class="my-2" method="post" style="border: 2px rgba(13,110,253,.25) solid; border-radius: 8px; padding: 48px;">
		<div class="mb-1">
			<input type="text" name="id" placeholder="아아디" required="required" style="width: 300px"/> 
		</div>
		<div class="mb-1">
			<input type="password" name="pass" placeholder="비밀번호" required="required" style="width: 300px"/>
		</div>
		<div class="mb-1">
			<input type="text" name="nick" placeholder="닉네임" required="required" style="width: 300px"/>
		</div>
		<div style="display: flex; flex-direction: row-reverse;">
			<button type="submit" class="btn btn-outline-primary">회원가입</button>
		</div>
	</form>
		{{#error}}
			<div class="alert alert-danger" role="alert" style="width: 65%;">
				사용자 등록이 실패 하였습니다.(사용할 수 없는 아이디거나 네트워크 장애일 수 있습니다.)
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{{/error}}
	</div>
	
{{> /common/footer}}